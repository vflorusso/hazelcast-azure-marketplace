{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "adminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Username",
                "toolTip": "Username for hazelcast VMs.",
                "osPlatform": "Linux"
            },
            {
                "name": "SSHCredentials",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "authenticationType": "Authentication type",
                    "password": "Password",
                    "confirmPassword": "Confirm password",
                    "sshPublicKey": "SSH public key"
                },
                "toolTip": {
                    "authenticationType": "",
                    "password": "",
                    "sshPublicKey": ""
                },
                "constraints": {
                    "required": true
                },
                "options": {
                    "hideConfirmation": false
                },
                "osPlatform": "Linux"
            }
        ],
        "steps": [
            {
                "name": "infrastructureConfig",
                "label": "Infrastructure settings",
                "subLabel": {
                    "preValidation": "Configure the infrastructure settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Infrastructure settings",
                "elements": [
                    {
                        "name": "licenseKey",
                        "type": "Microsoft.Common.TextBox",
                        "label": "License",
                        "toolTip": "License Key for Enterprise to be installed. For a trial key: https://hazelcast.com/hazelcast-enterprise-download/trial/",
                        "constraints": {
                            "required": true
                        },
                        "osPlatform": "Linux"
                    },
                    {
                        "name": "clusterVersion",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Hazelcast Version",
                        "defaultValue": "3.7.3",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "3.7.3",
                                    "value": "3.7.3"
                                },
                                {
                                    "label": "3.7.2",
                                    "value": "3.7.2"
                                },
                                {
                                    "label": "3.7.1",
                                    "value": "3.7.1"
                                },
                                {
                                    "label": "3.7",
                                    "value": "3.7"
                                },
                                {
                                    "label": "3.6.5",
                                    "value": "3.6.5"
                                },
                                {
                                    "label": "3.6.4",
                                    "value": "3.6.4"
                                },
                                {
                                    "label": "3.6.3",
                                    "value": "3.6.3"
                                },
                                {
                                    "label": "3.6.2",
                                    "value": "3.6.2"
                                },
                                {
                                    "label": "3.6.1",
                                    "value": "3.6.1"
                                },
                                {
                                    "label": "3.6",
                                    "value": "3.6"
                                },
                                {
                                    "label": "3.5.5",
                                    "value": "3.5.5"
                                },
                                {
                                    "label": "3.5.4",
                                    "value": "3.5.4"
                                },
                                {
                                    "label": "3.5.3",
                                    "value": "3.5.3"
                                }
                            ]
                        }
                    },
                    {
                        "name": "storageAccount",
                        "type": "Microsoft.Storage.StorageAccountSelector",
                        "label": "Storage account",
                        "defaultValue": {
                            "type": "Standard_LRS"
                        },
                        "constraints": {
                            "required": true,
                            "allowedTypes": [
                                "Standard_LRS",
                                "Standard_GRS",
                                "Standard_RAGRS"
                            ]
                        }
                    },
                    {
                        "name": "ubuntuOSVersion",
                        "type": "Microsoft.Common.DropDown",
                        "label": "ubuntuOSVersion",
                        "toolTip": "",
                        "defaultValue": "14.04.4-LTS",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "12.04.5-LTS",
                                    "value": "12.04.5-LTS"
                                },
                                {
                                    "label": "14.04.4-LTS",
                                    "value": "14.04.4-LTS"
                                },
                                {
                                    "label": "16.04.0-LTS",
                                    "value": "16.04.0-LTS"
                                }
                            ]
                        }
                    },
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual machine size",
                        "toolTip": "The size of the virtual machine for the domain controller.",
                        "defaultValue": "Standard_D1",
                        "recommendedSizes": [
                            "Standard_D1",
                            "Standard_D2",
                            "Standard_D3"
                        ],
                        "constraints": {
                            "allowedSizes": [
                                "Standard_D1",
                                "Standard_D2",
                                "Standard_D3",
                                "Standard_D4",
                                "Standard_D11",
                                "Standard_D12",
                                "Standard_D13",
                                "Standard_D14",
                                "Standard_D1_v2",
                                "Standard_D2_v2",
                                "Standard_D3_v2",
                                "Standard_D4_v2",
                                "Standard_D11_v2",
                                "Standard_D12_v2",
                                "Standard_D13_v2",
                                "Standard_D14_v2"
                            ]
                        },
                        "osPlatform": "Linux",
                        "count": "1"
                    },
                    {
                        "name": "dnsAndPublicIP",
                        "type": "Microsoft.Network.PublicIpAddressCombo",
                        "label": {
                            "publicIpAddress": "Public IP address",
                            "domainNameLabel": "DNS Prefix"
                        },
                        "toolTip": {
                            "domainNameLabel": "DNS Prefix for the VM public IP addresses."
                        },
                        "constraints": {
                            "required": {
                                "domainNameLabel": true
                            }
                        },
                        "defaultValue": {
                            "publicIpAddressName": "",
                            "domainNameLabel": "Public name of this management center"
                        },
                        "options": {
                            "hideNone": true
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "adminUserName": "[basics('adminUsername')]",
            "authenticationType": "[basics('SSHCredentials').authenticationType]",
            "adminPassword": "[basics('SSHCredentials').password]",
            "sshPublicKey": "[basics('SSHCredentials').sshPublicKey]",
            "licenseKey": "[steps('infrastructureConfig').licenseKey]",
            "clusterVersion": "[steps('infrastructureConfig').clusterVersion]",
            "storageAccountNewOrExisting": "[steps('infrastructureConfig').storageAccount.newOrExisting]",
            "storageAccountName": "[steps('infrastructureConfig').storageAccount.name]",
            "storageAccountType": "[steps('infrastructureConfig').storageAccount.type]",
            "ubuntuOSVersion": "[steps('infrastructureConfig').ubuntuOSVersion]",
            "existingStorageAccountRG": "[steps('infrastructureConfig').storageAccount.resourceGroup]",
            "vmSize": "[steps('infrastructureConfig').vmSize]",
            "instanceCount": "[steps('infrastructureConfig').vmCount]",
            "publicIPAddressName": "[steps('infrastructureConfig').dnsAndPublicIP.name]",
            "dnsPrefix": "[steps('infrastructureConfig').dnsAndPublicIP.domainNameLabel]",
            "publicIPNewOrExisting": "[steps('infrastructureConfig').dnsAndPublicIP.newOrExistingOrNone]",
            "location": "[location()]"
        }
    }
}